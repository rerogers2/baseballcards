<div>

    @if (currentPage > 0)
    {
        <a href="@Url.Action("Index", new { page = currentPage - 1 })"
       class="btn btn-default">
            &laquo; Prev 
        </a>
    }
    @if (currentPage < totalPages)
    {
        <a href="@Url.Action("Index", new { Page = currentPage + 1 })"
       class="btn btn-default">
            Next &raquo;
        </a>
    }
</div>


