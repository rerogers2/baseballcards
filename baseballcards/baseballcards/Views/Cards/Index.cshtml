@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
@model IEnumerable<Cards>

<h2>Baseball Cards</h2>

<table class="table">
    <tr>
        <th>CardID</th>
        <th>Set</th>
        <th>Year</th>
        <th>Subset</th>
        <th>Card Number</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Total Number</th>
        <th>Info</th>
        <th>Serial Number</th>
        <th>Autograph</th>
        <th>Relic</th>
    </tr>

    @foreach (var card in @Model)
    {
        <tr>
            <td> <a href=/Cards/ViewCard/@card.CardID>@card.CardID</a> </td>
            @*@<td> <a href=/Cards/ViewSet/@card.SetName>@card.SetName</a> </td>*@
            <td> <a asp-controller="Cards" asp-action="ViewSet" asp-route-id="@card.SetName"> @card.SetName </a> </td>
            <td>@card.Year</td>
            <td>@card.Subset</td>
            <td>@card.Cardnumber</td>
            <td>@card.Firstname</td>
            <td>@card.Lastname</td>
            <td>@card.TotalNumber</td>
            <td>@card.Info</td>
            <td>@card.SerialNumber</td>
            <td>@card.Autograph</td>
            <td>@card.Relic</td>
        </tr>
    }

</table>
