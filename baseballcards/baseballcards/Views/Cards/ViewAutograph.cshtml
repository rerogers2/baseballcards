@{
    ViewData["Title"] = "Autograph";
    var items = ViewBag.Items as IEnumerable<Cards>;
    var totalCount = ViewBag.TotalCount;
    var unique = ViewBag.Unique;
}
@model IEnumerable<Cards>

<h1>Autograph Cards</h1>
<h2 style="text-align:left;">
    Total Count: @totalCount
    <span style="float:right;">
        Unique Count: @unique
    </span>
</h2>
<hr>


<h2>Baseball Cards</h2>

<table class="table">
    <tr>
        @*<th>CardID</th>*@
        <th>Set</th>
        <th>Year</th>
        <th>Subset</th>
        <th>Card Number</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Total Number</th>
        <th>Info</th>
        <th>Serial Number</th>
        <th>Autograph</th>
        <th>Relic</th> 
    </tr>

    @foreach (var card in items) @*@Model*@
    {
        <tr>
@*            <td> <a href=/Cards/ViewCard/@card.CardID>@card.CardID</a> </td>
*@          <td>@card.SetName</td>
            <td>@card.Year</td>
            <td>@card.Subset</td>
            <td>@card.Cardnumber</td>
            <td>@card.Firstname</td>
            <td>@card.Lastname</td>
            <td>@card.TotalNumber</td>
            <td>@card.Info</td>
            <td>@card.SerialNumber</td>
            <td>@card.Autograph</td>
            <td>@card.Relic</td>
            <td> <a asp-controller="Cards" asp-action="ViewCard" asp-route-id="@card.CardID">View</a></td>
        </tr>
    }

</table>
<div>
    <a asp-action="Index"> Return to Full List</a>
</div>