@{
    ViewData["Title"] = "Set";
    var items = ViewBag.Items as IEnumerable<Cards>;
    var totalPages = ViewBag.TotalPages;
    var currentPage = ViewBag.CurrentPage;
    var totalCount = ViewBag.TotalCount;
}

@model IEnumerable<Cards>

<h1><pre class="tab">Set                                             Total Count: @totalCount</pre></h1>


<h2>Baseball Cards</h2>

<table class="table">
    <tr>
        <th>Set</th>
        <th>Year</th>
        <th>Subset</th>
        <th>Card Number</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Total Number</th>
        <th>Info</th>
        <th>Serial Number</th>
        <th>Autograph</th>
        <th>Relic</th>
    </tr>

    @foreach (var card in items) @*@Model*@
    {
        <tr>
            <td>@card.SetName</td>
            <td>@card.Year</td>
            <td>@card.Subset</td>
            <td>@card.Cardnumber</td>
            <td>@card.Firstname</td>
            <td>@card.Lastname</td>
            <td>@card.TotalNumber</td>
            <td>@card.Info</td>
            <td>@card.SerialNumber</td>
            <td>@card.Autograph</td>
            <td>@card.Relic</td>
            <td> <a asp-controller="Cards" asp-action="ViewCard" asp-route-id="@card.CardID">View</a></td>
        </tr>
    }

</table>
<div>

    @if (currentPage > 0)
    {
            <a href="@Url.Action("ViewSet", new { page = currentPage - 1 })"
       class="btn btn-default">
                &laquo; Prev
            </a>
    }
    @if (currentPage < totalPages)
    {
            <a href="@Url.Action("ViewSet", new { page = currentPage + 1 })"
       class="btn btn-default">
                Next &raquo;
            </a>
    }
</div>
<div>
    <a asp-action="Index"> Return to Full List</a>
</div>