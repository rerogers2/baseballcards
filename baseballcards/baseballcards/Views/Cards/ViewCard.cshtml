@model Cards

<h3>@Model.Firstname @Model.Lastname Card Information</h3>

<div style="display: block">
    <a href="/Cards/UpdateCard/@Model.CardID">Update this Card</a>
</div>

<table class="table">
    <tr>
        @*<th>Card ID</th>*@
        <th>Set</th>
        <th>Year</th>
        <th>Subset</th>
        <th>Card Number</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Total Number</th>
        <th>Info</th>
        <th>Serial Number</th>
        <th>Autograph</th>
        <th>Relic</th>
    </tr>

    
        <tr>
            @*<td>@Model.CardID</td>*@
            <td>@Model.SetName</td>
            <td>@Model.Year</td>
            <td>@Model.Subset</td>
            <td>@Model.Cardnumber</td>
            <td>@Model.Firstname</td>
            <td>@Model.Lastname</td>
            <td>@Model.TotalNumber</td>
            <td>@Model.Info</td>
            <td>@Model.SerialNumber</td>
            <td>@Model.Autograph</td>
            <td>@Model.Relic</td>
        </tr>
    
</table>

<div style="display: block">
    @using (Html.BeginForm("DeleteCard", "Cards", "Post"))
    {
        <input type="hidden" asp-for="CardID" value="@Model.CardID" />
        <input type="submit" onclick="return confirm('Are you sure?')" value="Delete this card" />
    }
</div>
 
<div>
    <a asp-action="Index"> Return to Full List</a>
</div>